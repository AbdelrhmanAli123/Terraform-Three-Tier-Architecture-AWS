resource "aws_eip" "nat_eip" {
  count = 2
  vpc   = true
}

resource "aws_nat_gateway" "nat_gateway" {
  count         = length(var.public_subnets_cidr)
  allocation_id = aws_eip.nat_eip[*].id
  subnet_id     = var.public_subnets_id[count.index]

  tags = {
    Name = "gw NAT"
  }

  depends_on = [aws_eip.nat_eip]
}
